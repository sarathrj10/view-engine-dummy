<h4>Items as Cards</h4>

<div class="row">
        {{#each items}}
        <div class="col-12 col-md-4 mb-4">
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <p class="card-text"><strong>{{this.name}}</strong></p>
                <p>Price: {{this.price}}</p>
                <p>Quantity: {{this.quantity}}</p>
            </div>
        </div>
        </div>
        {{/each}}
</div>